$bg-default   = #333
$text-default = #fff

$bg-warning   = #fa4
$text-warning = #fff

$bg-positive   = #ac4
$text-positive = #fff

$bg-negative   = #f42
$text-negative = #fff

transform(args)
	transform args
	-webkit-transform args

.mgr-notifications
	margin 0
	padding 0
	font-size .8rem
	text-align left

	&.mgr-permanent
		.mgr-notification
			padding .6rem .8rem

	&.mgr-sticky
		max-height 100%
		overflow-y auto
		padding 0 1rem
		position fixed
		left 50%
		transform translateX(-50%)
		z-index 100

		&.mgr-position-top
			top 0

		&.mgr-position-bottom
			bottom 0

		&.mgr-position-left
			left 0
			transform none

		&.mgr-position-right
			right 0
			transform none

.mgr-notification
	background $bg-default
	border-radius .2rem
	color $text-default
	margin .5rem
	padding .6rem .8rem
	padding-right 2rem
	position relative

	p
		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	&.mgr-positive
		background $bg-positive
		color      $text-positive

	&.mgr-negative
		background $bg-negative
		color      $text-negative

	&.mgr-warning
		background $bg-warning
		color      $text-warning

.mgr-dismiss-notification
	background transparent
	border 0
	color $text-default
	cursor pointer
	font inherit
	font-size 1.2rem
	height 2rem
	line-height 2rem !important
	margin 0
	opacity .6
	outline 0
	padding 0
	position absolute
	right 0
	top 0
	transition opacity .2s ease
	width 2rem

	&:hover
	&:focus
		box-shadow none
		opacity 1

	&:after
		content 'Ã—'
		height 100%
		left 0
		position absolute
		top 0
		width 100%
